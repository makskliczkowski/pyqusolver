include CHANGELOG.md
include INSTALL.md
include LICENSE.md
include README.md
include pyproject.toml

# Include all Python source files
recursive-include QES *.py
recursive-include QES *.pyx
recursive-include QES *.pxd

# Explicitly include submodule __init__.py files to prevent namespace package issues
include QES/general_python/__init__.py
include QES/general_python/algebra/__init__.py
include QES/general_python/common/__init__.py
include QES/general_python/lattices/__init__.py
include QES/general_python/maths/__init__.py
include QES/general_python/physics/__init__.py
include QES/general_python/ml/__init__.py

# Include data files
recursive-include QES *.txt
recursive-include QES *.rst
recursive-include QES *.md
recursive-include QES *.yaml
recursive-include QES *.yml
recursive-include QES *.json

# Include test data
recursive-include QES/general_python/tests/data *

# Include documentation
recursive-include docs *

# Include examples if any
recursive-include examples *.py
recursive-include examples *.ipynb
recursive-include examples *.md

# Exclude compiled files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude *.dll
global-exclude *.dylib

# Exclude version control
global-exclude .git*
global-exclude .svn*

# Exclude build artifacts
global-exclude build/*
global-exclude dist/*
global-exclude *.egg-info/*

# Exclude IDE files
global-exclude .vscode/*
global-exclude .idea/*
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude OS files
global-exclude .DS_Store
global-exclude Thumbs.db
